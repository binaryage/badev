// totalterminal-specific logic
<%

$helpers = %w(TotalTerminal TotalTerminal-osax Agent Uninstaller CrashWatcher)

def is_totalterminal_helper?
  $helpers.include? @project
end

def is_totalterminal?
  return true if is_totalfinder_helper?
  return false
end

def is_totalterminal_shell?
  @target=="TotalTerminal.bundle" and @project=="TotalTerminal"
end

def is_bundle?
  return true if is_totalfinder_shell?
end

def is_app?
  ["Uninstaller", "Agent", "CrashWatcher"].include? @target
end

def is_osax?
  @project=="TotalTerminal-osax" and @target == "TotalTerminal"
end

%>

<%= include("base") if is_totalterminal? %>
<%= include("debug") if is_totalterminal? and @configuration=="Debug" %>
<%= include("release") if is_totalterminal? and @configuration=="Release" %>
<%= include("shell") if is_totalterminal_shell? %>
<%= include("app") if is_app? %>
<%= include("bundle") if is_bundle? %>
<%= include("osax") if is_osax? %>
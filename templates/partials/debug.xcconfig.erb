///
/// Base configuration for a Debug build of any project
///

// Whether to strip debugging symbols when copying resources (like included binaries)
COPY_PHASE_STRIP = NO

// The optimization level (0, 1, 2, 3, s) for the produced binary
GCC_OPTIMIZATION_LEVEL = 0

<% $shared["GCC_PREPROCESSOR_DEFINITIONS"] << "DEBUG=1" %>

// Whether to enable link-time optimizations (such as inlining across translation units)
LLVM_LTO = NO

// Whether to only build the active architecture
ONLY_ACTIVE_ARCH = YES

// These settings catch some errors in integer arithmetic and some instances of undefined behavior
<% $shared["OTHER_CFLAGS"] << "-ftrapv" << "-fsanitize=undefined-trap" << "-fsanitize-undefined-trap-on-error" %>

// Whether to strip debugging symbols when copying the built product to its final installation location
STRIP_INSTALLED_PRODUCT = NO

// Disable Developer ID timestamping
OTHER_CODE_SIGN_FLAGS = --timestamp=none